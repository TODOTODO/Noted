<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ps213324b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SeeActivity" >

     <Button
        android:id="@+id/backsee"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:text="返回" />

    <Button
        android:id="@+id/delsee"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:text="删除" />

    <Button
        android:id="@+id/editsee"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/back"
        android:layout_centerHorizontal="true"
        android:text="编辑" />

    <ImageView
        android:id="@+id/tupian"
        android:layout_width="150dp"
        android:layout_height="237dp"
        android:layout_alignTop="@+id/wenzi"
        android:layout_toRightOf="@+id/wenzi" />

    <TextView
        android:id="@+id/wenzi"
        android:layout_width="120dp"
        android:layout_height="237dp"
        android:layout_alignLeft="@+id/backsee"
        android:layout_below="@+id/backsee"
        android:layout_marginTop="16dp" />
    
</RelativeLayout>